{
    "name": "spryker-shop/availability-widget",
    "type": "library",
    "description": "AvailabilityWidget module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker-shop/availability-widget-extension": "^1.0.0",
        "spryker-shop/cart-reorder-page-extension": "^1.0.0",
        "spryker-shop/shop-ui": "^1.0.0",
        "spryker/availability-storage": "^2.9.0",
        "spryker/glossary-storage": "^1.0.0",
        "spryker/kernel": "^3.30.0",
        "spryker/locale": "^3.0.0 || ^4.0.0",
        "spryker/transfer": "^3.25.0",
        "spryker/util-number": "^1.0.0"
    },
    "require-dev": {
        "spryker-shop/product-detail-page": "*",
        "spryker/code-sniffer": "*"
    },
    "suggest": {
        "spryker/product-measurement-unit": "If you want to display availability with measurement units.",
        "spryker-shop/product-detail-page": "Widget plugins are available for this module."
    },
    "autoload": {
        "psr-4": {
            "SprykerShop\\": "src/SprykerShop/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
